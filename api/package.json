{
  "name": "carbon-recycling-api",
  "version": "1.0.0",
  "description": "Carbon Recycling Platform API - Cloudflare Workers backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --compatibility-date 2024-01-15",
    "deploy": "wrangler deploy --compatibility-date 2024-01-15",
    "db:migrate": "wrangler d1 execute carbon-recycling-db --local --file=schema.sql",
    "db:migrate:production": "wrangler d1 execute carbon-recycling-db --file=schema.sql",
    "db:studio": "wrangler d1 execute carbon-recycling-db --local --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^3.12.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.78.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}