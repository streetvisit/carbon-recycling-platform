---
import Layout from '../layouts/Layout.astro';

const blogPosts = [
  {
    id: 1,
    title: "Getting Started with Carbon Accounting",
    excerpt: "Learn the fundamentals of carbon accounting and how to implement effective emissions tracking in your organization.",
    date: "2024-01-15",
    author: "Carbon Team",
    category: "Getting Started",
    readTime: "5 min read",
    image: "https://images.unsplash.com/photo-1569163139394-de4798aa62b6?w=800&h=450&fit=crop"
  },
  {
    id: 2,
    title: "Understanding Scope 1, 2, and 3 Emissions",
    excerpt: "A comprehensive guide to the three scopes of greenhouse gas emissions and how to measure each one effectively.",
    date: "2024-01-10",
    author: "Carbon Team",
    category: "Fundamentals",
    readTime: "7 min read",
    image: "https://images.unsplash.com/photo-1611273426858-450d8e3c9fce?w=800&h=450&fit=crop"
  },
  {
    id: 3,
    title: "Integration Best Practices for UK Utilities",
    excerpt: "Streamline your data collection from UK energy providers with our proven integration strategies and automation tips.",
    date: "2024-01-05",
    author: "Carbon Team",
    category: "Integrations",
    readTime: "6 min read",
    image: "https://images.unsplash.com/photo-1473341304170-971dccb5ac1e?w=800&h=450&fit=crop"
  },
  {
    id: 4,
    title: "Net Zero Roadmap: A Practical Guide",
    excerpt: "Develop a realistic roadmap to achieve net-zero emissions with actionable steps and measurable milestones.",
    date: "2023-12-28",
    author: "Carbon Team",
    category: "Strategy",
    readTime: "10 min read",
    image: "https://images.unsplash.com/photo-1497435334941-8c899ee9e8e9?w=800&h=450&fit=crop"
  },
  {
    id: 5,
    title: "Supply Chain Decarbonisation Strategies",
    excerpt: "Engage your suppliers in your sustainability journey and reduce Scope 3 emissions across your value chain.",
    date: "2023-12-20",
    author: "Carbon Team",
    category: "Supply Chain",
    readTime: "8 min read",
    image: "https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?w=800&h=450&fit=crop"
  },
  {
    id: 6,
    title: "Carbon Trading: Opportunities and Risks",
    excerpt: "Navigate the carbon credit market with confidence. Learn about verification standards, pricing, and portfolio management.",
    date: "2023-12-15",
    author: "Carbon Team",
    category: "Trading",
    readTime: "9 min read",
    image: "https://images.unsplash.com/photo-1559526324-593bc073d938?w=800&h=450&fit=crop"
  }
];

const categories = [...new Set(blogPosts.map(post => post.category))];
---

<Layout title="Blog - Carbon Recycling Platform" currentPage="/blog">
  <main class="bg-gray-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-green-600 to-blue-600 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Carbon Management Insights
          </h1>
          <p class="text-xl text-green-100 max-w-3xl mx-auto">
            Expert guidance, best practices, and industry insights for your sustainability journey
          </p>
        </div>
      </div>
    </div>

    <!-- Category Filter -->
    <div class="bg-white border-b border-gray-200 sticky top-0 z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center space-x-4 py-4 overflow-x-auto">
          <button class="px-4 py-2 bg-green-600 text-white rounded-full text-sm font-medium whitespace-nowrap">
            All Posts
          </button>
          {categories.map(category => (
            <button class="px-4 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-full text-sm font-medium whitespace-nowrap transition-colors">
              {category}
            </button>
          ))}
        </div>
      </div>
    </div>

    <!-- Blog Grid -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Featured Post -->
      <div class="mb-12">
        <a href={`/blog/${blogPosts[0].id}`} class="group block bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="relative h-64 md:h-auto">
              <img 
                src={blogPosts[0].image} 
                alt={blogPosts[0].title}
                class="w-full h-full object-cover"
              />
              <div class="absolute top-4 left-4">
                <span class="bg-green-600 text-white px-3 py-1 rounded-full text-xs font-medium">
                  Featured
                </span>
              </div>
            </div>
            <div class="p-8 flex flex-col justify-center">
              <div class="flex items-center space-x-4 text-sm text-gray-500 mb-3">
                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-medium">
                  {blogPosts[0].category}
                </span>
                <span>{blogPosts[0].date}</span>
                <span>â€¢</span>
                <span>{blogPosts[0].readTime}</span>
              </div>
              <h2 class="text-3xl font-bold text-gray-900 mb-4 group-hover:text-green-600 transition-colors">
                {blogPosts[0].title}
              </h2>
              <p class="text-gray-600 mb-6">
                {blogPosts[0].excerpt}
              </p>
              <div class="flex items-center text-green-600 font-medium">
                Read More
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </div>
        </a>
      </div>

      <!-- Post Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.slice(1).map(post => (
          <a 
            href={`/blog/${post.id}`} 
            class="group bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow"
          >
            <div class="relative h-48">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-6">
              <div class="flex items-center space-x-3 text-sm text-gray-500 mb-3">
                <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs font-medium">
                  {post.category}
                </span>
                <span>{post.readTime}</span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-green-600 transition-colors">
                {post.title}
              </h3>
              <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                {post.excerpt}
              </p>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-500">{post.date}</span>
                <span class="text-green-600 font-medium group-hover:translate-x-1 transition-transform inline-flex items-center">
                  Read More
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Newsletter CTA -->
      <div class="mt-16 bg-gradient-to-r from-green-600 to-blue-600 rounded-lg shadow-xl p-8 md:p-12 text-center">
        <h3 class="text-2xl md:text-3xl font-bold text-white mb-4">
          Stay Updated on Sustainability Insights
        </h3>
        <p class="text-green-100 mb-8 max-w-2xl mx-auto">
          Get the latest carbon management strategies, industry news, and platform updates delivered to your inbox monthly.
        </p>
        <form class="max-w-md mx-auto flex flex-col sm:flex-row gap-4">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="flex-1 px-4 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400"
            required
          />
          <button 
            type="submit"
            class="bg-white text-green-600 px-6 py-3 rounded-lg font-semibold hover:bg-green-50 transition-colors whitespace-nowrap"
          >
            Subscribe
          </button>
        </form>
        <p class="text-green-100 text-sm mt-4">
          No spam. Unsubscribe anytime.
        </p>
      </div>
    </div>
  </main>

  <script>
    // Simple category filtering (client-side)
    document.addEventListener('DOMContentLoaded', () => {
      const categoryButtons = document.querySelectorAll('button');
      
      categoryButtons.forEach(button => {
        button.addEventListener('click', () => {
          // Remove active state from all buttons
          categoryButtons.forEach(btn => {
            btn.classList.remove('bg-green-600', 'text-white');
            btn.classList.add('text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-100');
          });
          
          // Add active state to clicked button
          button.classList.add('bg-green-600', 'text-white');
          button.classList.remove('text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-100');
          
          // In production, this would filter posts by category
          console.log('Filter by:', button.textContent);
        });
      });

      // Newsletter form submission
      const form = document.querySelector('form');
      form?.addEventListener('submit', (e) => {
        e.preventDefault();
        const email = form.querySelector('input[type="email"]')?.value;
        alert(`Thanks for subscribing! We'll send updates to ${email}`);
        form.reset();
      });
    });
  </script>
</Layout>
