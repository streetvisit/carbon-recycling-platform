---
import Layout from '../../layouts/Layout.astro';
import { getAllIntegrations } from '../../data/uk-utility-integrations.ts';

const integrations = getAllIntegrations();
const manufacturingSystems = integrations.manufacturing;
---

<Layout 
  title="Manufacturing & Industrial Integrations - CarbonRecycling.co.uk"
  currentPage="/integrations/manufacturing"
  authenticated={false}
>
  <main class="bg-gray-50">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-orange-600 to-red-600 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Manufacturing & Industrial Integrations</h1>
          <p class="text-xl text-orange-100 max-w-3xl mx-auto mb-8">
            Monitor emissions from production processes, equipment, and industrial operations. Connect to {manufacturingSystems.length} manufacturing systems to track energy consumption, production efficiency, and process emissions.
          </p>
          <a href="/sign-up" class="bg-white text-orange-600 px-8 py-3 rounded-lg font-semibold hover:bg-orange-50 transition-colors inline-flex items-center">
            Start Free Trial
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Manufacturing Systems Grid -->
    <div class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- MES & Production Systems -->
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-8">Manufacturing Execution Systems (MES)</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {manufacturingSystems.filter(system => ['siemens-opcenter', 'rockwell-factorytalk', 'wonderware-mes', 'ge-proficy', 'aveva-mes'].includes(system.id)).map(system => (
              <a href={`/integrations/${system.id}`} class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow border">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="text-lg font-semibold text-gray-900">{system.name}</h3>
                  <div class="flex items-center space-x-2">
                    <span class="text-xs bg-orange-100 text-orange-800 px-2 py-1 rounded">{system.type.toUpperCase()}</span>
                    <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                  </div>
                </div>
                
                <div class="space-y-2 text-sm text-gray-600 mb-4">
                  <div class="flex justify-between">
                    <span>Integration Method:</span>
                    <span class="font-medium uppercase">{system.apiIntegration.method}</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Real-time Data:</span>
                    <span class="font-medium">{system.apiIntegration.real_time ? 'Yes' : 'No'}</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Industries:</span>
                    <span class="font-medium">{system.industry.join(', ')}</span>
                  </div>
                </div>

                <!-- Data Types -->
                <div class="border-t pt-4">
                  <h4 class="text-sm font-medium text-gray-900 mb-2">Data Collection:</h4>
                  <div class="grid grid-cols-1 gap-1 text-xs">
                    <div class="flex justify-between">
                      <span>Energy Usage:</span>
                      <span class="text-green-600">{system.dataTypes.energy_usage ? 'Yes' : 'No'}</span>
                    </div>
                    <div class="flex justify-between">
                      <span>Production:</span>
                      <span class="text-green-600">{system.dataTypes.production_volumes ? 'Yes' : 'No'}</span>
                    </div>
                    <div class="flex justify-between">
                      <span>Waste Output:</span>
                      <span class="text-green-600">{system.dataTypes.waste_output ? 'Yes' : 'No'}</span>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- SCADA & Control Systems -->
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-8">SCADA & Process Control</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {manufacturingSystems.filter(system => ['schneider-citect', 'honeywell-experion', 'emerson-deltav', 'abb-system800xa', 'yokogawa-centum'].includes(system.id)).map(system => (
              <a href={`/integrations/${system.id}`} class="bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow border">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="text-md font-semibold text-gray-900">{system.name}</h3>
                  <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                </div>
                <div class="text-xs text-gray-600 space-y-1">
                  <div>Type: {system.type.toUpperCase()}</div>
                  <div class="text-green-600">Real-time: {system.apiIntegration.real_time ? 'Yes' : 'No'}</div>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Quality & Lab Systems -->
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-8">Quality & Laboratory Management</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {manufacturingSystems.filter(system => ['thermo-samplemanager', 'waters-nugenesis', 'abbott-starlims', 'perkinelmer-elements', 'labware-lims'].includes(system.id)).map(system => (
              <a href={`/integrations/${system.id}`} class="bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow border">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="text-md font-semibold text-gray-900">{system.name}</h3>
                  <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                </div>
                <div class="text-xs text-gray-600 space-y-1">
                  <div>Type: {system.type.toUpperCase()}</div>
                  <div class="text-green-600">Industries: {system.industry.slice(0,2).join(', ')}</div>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Specialized Manufacturing -->
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-8">Specialized Manufacturing Systems</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {manufacturingSystems.filter(system => !['siemens-opcenter', 'rockwell-factorytalk', 'wonderware-mes', 'ge-proficy', 'aveva-mes', 'schneider-citect', 'honeywell-experion', 'emerson-deltav', 'abb-system800xa', 'yokogawa-centum', 'thermo-samplemanager', 'waters-nugenesis', 'abbott-starlims', 'perkinelmer-elements', 'labware-lims'].includes(system.id)).map(system => (
              <a href={`/integrations/${system.id}`} class="bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow border">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="text-md font-semibold text-gray-900">{system.name}</h3>
                  <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                </div>
                <div class="text-xs text-gray-600 space-y-1">
                  <div>Type: {system.type.toUpperCase()}</div>
                  <div class="text-green-600">Real-time: {system.apiIntegration.real_time ? 'Yes' : 'No'}</div>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Integration Benefits -->
        <div class="bg-white p-8 rounded-lg shadow-sm mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Manufacturing Carbon Tracking Benefits</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="w-16 h-16 bg-orange-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Process Optimization</h3>
              <p class="text-gray-600">Identify energy-intensive processes and optimize production for lower emissions</p>
            </div>
            <div class="text-center">
              <div class="w-16 h-16 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Production Analytics</h3>
              <p class="text-gray-600">Monitor equipment efficiency and predict maintenance needs to reduce waste</p>
            </div>
            <div class="text-center">
              <div class="w-16 h-16 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Energy Management</h3>
              <p class="text-gray-600">Track energy usage across all manufacturing processes in real-time</p>
            </div>
          </div>
        </div>

        <!-- Statistics -->
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Integration Overview</h2>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="text-center">
              <div class="text-3xl font-bold text-orange-600">{manufacturingSystems.length}</div>
              <div class="text-gray-600">Manufacturing Systems</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-green-600">{manufacturingSystems.filter(c => c.apiIntegration.real_time).length}</div>
              <div class="text-gray-600">Real-time Data</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-blue-600">{manufacturingSystems.filter(c => c.type === 'mes').length}</div>
              <div class="text-gray-600">MES Systems</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-yellow-600">{manufacturingSystems.filter(c => c.dataTypes.energy_usage).length}</div>
              <div class="text-gray-600">Energy Tracking</div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-orange-600 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">Ready to Optimize Your Manufacturing Emissions?</h2>
        <p class="text-xl text-orange-100 mb-8">Start tracking and reducing your production carbon footprint today</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/sign-up" class="bg-white text-orange-600 px-8 py-3 rounded-lg font-semibold hover:bg-orange-50 transition-colors">
            Start Free Trial
          </a>
          <a href="mailto:info@carbonrecycling.co.uk" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-orange-600 transition-colors">
            Schedule Demo
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>