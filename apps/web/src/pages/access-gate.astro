---
import Layout from '../layouts/Layout.astro';
---

<Layout title="CarbonRecycling.co.uk - Coming Soon">
  <main class="min-h-screen bg-gradient-to-br from-green-50 to-blue-50 flex items-center justify-center px-4">
    <div class="max-w-md w-full space-y-8">
      <!-- Logo/Brand -->
      <div class="text-center">
        <div class="mx-auto h-12 w-12 bg-green-600 rounded-full flex items-center justify-center">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
        </div>
        <h1 class="mt-6 text-3xl font-bold text-gray-900">CarbonRecycling.co.uk</h1>
        <p class="mt-2 text-sm text-gray-600">Enterprise Carbon Management Platform</p>
      </div>

      <!-- Under Construction Notice -->
      <div class="bg-white rounded-lg shadow-md p-8">
        <div class="text-center">
          <div class="mx-auto h-16 w-16 bg-yellow-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 8.172V5L8 4z"/>
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">Platform Under Development</h2>
          <p class="text-gray-600 mb-6">
            We're putting the finishing touches on our comprehensive carbon management platform. 
            Coming soon with emissions tracking, supplier management, and compliance reporting.
          </p>
          
          <!-- Developer Access -->
          <div class="border-t border-gray-200 pt-6">
            <p class="text-sm text-gray-500 mb-4">Developer Access</p>
            <form id="accessForm" class="space-y-4">
              <div>
                <input
                  type="password"
                  id="accessPassword"
                  placeholder="Enter access code"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  autocomplete="off"
                />
              </div>
              <button
                type="submit"
                class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition-colors focus:outline-none focus:ring-2 focus:ring-green-500"
              >
                Access Platform
              </button>
            </form>
            <div id="errorMessage" class="hidden mt-3 text-sm text-red-600"></div>
          </div>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="text-center">
        <p class="text-sm text-gray-500">
          Questions? Contact us at 
          <a href="mailto:info@carbonrecycling.co.uk" class="text-green-600 hover:text-green-700">
            info@carbonrecycling.co.uk
          </a>
        </p>
      </div>
    </div>
  </main>

  <script>
    const ACCESS_CODE = 'carbon2024dev'; // Change this to your preferred password
    
    document.getElementById('accessForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const password = document.getElementById('accessPassword').value;
      const errorDiv = document.getElementById('errorMessage');
      
      if (password === ACCESS_CODE) {
        // Set access cookie for 24 hours
        document.cookie = `devAccess=granted; max-age=86400; path=/; SameSite=Strict`;
        
        // Redirect to public marketing page
        window.location.href = '/public-home';
      } else {
        errorDiv.textContent = 'Incorrect access code. Please try again.';
        errorDiv.classList.remove('hidden');
        document.getElementById('accessPassword').value = '';
      }
    });

    // Show error for 3 seconds then hide
    document.getElementById('accessPassword').addEventListener('input', function() {
      document.getElementById('errorMessage').classList.add('hidden');
    });
  </script>
</Layout>