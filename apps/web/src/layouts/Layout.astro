---
import '../styles/global.css';
import MainNavigation from '../components/MainNavigation.astro';

export interface Props {
  title: string;
  currentPage?: string;
  showNavigation?: boolean;
  authenticated?: boolean;
  breadcrumbs?: Array<{ label: string; href: string; current?: boolean }>;
}

const { 
  title, 
  currentPage = Astro.url.pathname, 
  showNavigation = true, 
  authenticated = false,
  breadcrumbs = []
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Enterprise Carbon & ESG Management Platform" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <!-- Version Debug Info -->
    <meta name="platform-version" content="v2024.10.20-18:19-critical-fixes" />
    <meta name="build-timestamp" content="2024-10-20T18:19:26Z" />
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen">
      {showNavigation && (
        <MainNavigation 
          currentPage={currentPage} 
          authenticated={authenticated}
          breadcrumbs={breadcrumbs}
        />
      )}
      <slot />
    </div>

    <!-- Version Debug Script -->
    <script>
      // Log version info to console for debugging
      console.group('🔧 Carbon Recycling Platform - Debug Info');
      console.log('📦 Platform Version: v2024.10.20-18:19-critical-fixes');
      console.log('🕒 Build Timestamp: 2024-10-20T18:19:26Z');
      console.log('📄 Page Title:', document.title);
      console.log('🌐 Current URL:', window.location.href);
      console.log('⏰ Page Load Time:', new Date().toISOString());
      console.log('🧭 Navigation Available:', !!document.querySelector('nav'));
      console.groupEnd();
    </script>
  </body>
</html>
